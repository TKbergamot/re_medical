<div class="login-form__box">
  <h1 class="login-form__title">Re:MEDICAL</h1>
  <p class="login-form__text">SECOND OPINION MORE EASILY.</p>
  <p class="login-form__text">登録情報変更フォーム</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :family_name, autofocus:true, autocomplete: "family_name", placeholder: '苗字' %>
      <%= f.label :family_name, '苗字', class:"label" %>
    </div>

    <div class="field">
      <%= f.text_field :first_name, autocomplete: "first_name", placeholder:'名前' %>
      <%= f.label :first_name, "名前", class:"label" %>
    </div>

    <div class="field">
      <%= f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: "ミョウジ" %>
      <%= f.label :family_name_kana, "ミョウジ", class:"label" %>
    </div>

    <div class="field">
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder:"ナマエ" %>
      <%= f.label :first_name_kana, "ナマエ", class:"label" %>
    </div>

    <div class="field">
      <%= f.text_field :phone_number, autocomplete: "phone_number", placeholder: '電話番号' %>
      <%= f.label :phone_number, "電話番号", class:"label" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
      <%= f.label :email, "メールアドレス", class:"label" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
      <%= f.label :password, "パスワード変更", class:"label" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード（確認用）" %>
      <%= f.label :password_confirmation, "パスワード変更（確認用）", class:"label" %>
    </div>

    <div class="field">
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"元のパスワード" %>
      <%= f.label :current_password, "元のパスワード", class:"label" %>
    </div>

    <div class="field" style="margin-top:2rem;">
      <%= f.submit "変更を保存", class:"button-default" %>
    </div>
  <% end %>
</div>
